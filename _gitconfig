[include]
  path = ~/.gitconfig.privacy

[core]
  preloadindex = true
  fschace = true
  editor = vim

[color]
  ui = true

[alias]
  br = branch
  fe = fetch --prune --all
  am = commit --amend
  co = checkout
  st = status
  di = diff
  cu = name-rev --name-only HEAD

  co-today = !git co $(date "+%Y-%m-%d")
  co-b-today = !git co -b $(date "+%Y-%m-%d")
  push-cu = !git push -u origin `git cu`
  push-fcu = !git push -uf origin `git cu`

[push]
  default = simple
