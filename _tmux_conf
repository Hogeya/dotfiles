# prefixを設定
set-option -g prefix C-z

# pane表示時間を伸ばす
set-option -g display-panes-time 10000

# mouse設定有効
set-option -g mouse on

# | で縦分割
bind | split-window -h

# - で横分割
bind - split-window -v

# ペインのインデックスを1スタート
set-option -g base-index 1

# 最大行数
set-option -g history-limit 5000

# 設定ファイルのリロード
bind r source-file ~/.tmux.conf \; display "RELOADED!"

# 256色端末を使用する
set-option -g default-terminal "screen-256color"

# カーソル移動のキーマッピングをvimにする
set-window-option -g mode-keys vi

# クリップボードにコピーさせる
if-shell "uname | grep -q CYGWIN" "source-file ~/dotfiles/tmux/_cygwin_tmux_conf"
if-shell "uname | grep -q Darwin" "source-file ~/dotfiles/tmux/_darwin_tmux_conf"

# TODO Darwinで検証
# set-option -g default-command "reattach-to-user-namespace -l zsh"
# bind-key -T copy-mode-vi v send-keys -X begin-selection
# bind-key -T copy-mode-vi C-v send-keys -X rectangle-toggle
# bind-key -T copy-mode-vi y send -X copy-pipe-and-cancel "reattach-to-user-namespace pbcopy"
# bind ] run "reattach-to-user-namespace pbpaste | tmux load-buffer - && tmux paste-buffer"

# ステータスバーの設定
set-option -g status-fg colour255
set-option -g status-bg colour238
set-option -g status-attr bright

# windowの色設定
set-window-option -g window-status-fg white
set-window-option -g window-status-bg colour238
set-window-option -g window-status-attr bright

# アクティブWindowを目立たせる
set-window-option -g window-status-current-fg colour229
set-window-option -g window-status-current-bg colour238
set-window-option -g window-status-current-attr bright

# ペインボーダーの色設定
set-option -g pane-border-bg black
set-option -g pane-active-border-fg white

# コマンドラインの色設定
set-option -g message-fg white
set-option -g message-bg colour238
set-option -g message-attr bright

# ステータスバー
set-option -g status-left-length 90
set-option -g status-right-length 90
set-option -g status-left " "
set-option -g status-right "#[fg=white]Session: #S #[fg=white]#I #[fg=white]#P  #(wifi) #(battery --tmux) #[fg=white][%Y-%m-%d %H:%M]"
set-option -g status-interval 1
set-option -g status-justify left
set-window-option -g monitor-activity on
set-option -g visual-activity on
set-option -g status-position top

# ペインサイズを上下左右に変更
# Prefix+J,J,J,.....と連打でリサイズできるようにする
bind h resize-pane -L 3
bind j resize-pane -D 3
bind k resize-pane -U 3
bind l resize-pane -R 3

# セッション切り替えキーバインド
bind N switch-client -n
bind P switch-client -p

# List Of plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-resurrect-auto'

run '~/.tmux/plugins/tpm/tpm'
run-shell '~/.tmux/plugins/tmux-resurrect/resurrect.tmux'
